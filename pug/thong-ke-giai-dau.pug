extends inc

block article
  article
    section.bread-crumb
      .container
        .bc-icons
          nav(aria-label='breadcrumb')
            ol.breadcrumb
              li.breadcrumb-item
                a(href='index.html') Trang chủ
              li.breadcrumb-item.active Thống kê giải đấu
    
    section.member-page
      .container
        .box-member-title
          h3 Thống kê chung
        .box-member.chart
          .row
            .col-sm-6.box-member-detail
              ul
                li
                  label Xếp hạng:
                  | 100
                li
                  label Số trận thắng:
                  | 1
                li
                  label Số trận thua:
                  | 199
                li
                  label Tổng điểm:
                  | 666
                li
                  label Tổng tiển thưởng:
                  | 99.000.000 đ

            .col-sm-6.box-member-detail
              ul
                li
                  label Số lần tham dự:
                  | 100
                li
                  label Số lần hạng 1:
                  | 1
                li
                  label Số lần hạng 2:
                  | 199
                li
                  label Số lần hạng 3:
                  | 666

        .box-member-title
          h3 Lịch sử trận đấu
        .box-member-tabs
          ul.nav.nav-tabs(role='tablist')
            li.nav-item
              a#tableSingle-tab.nav-link.active(data-toggle='tab', href='#tableSingle', role='tab', aria-controls='tableSingle', aria-selected='true') 
                | Đơn
            li.nav-item
              a#tableCouple-tab.nav-link(data-toggle='tab', href='#tableCouple', role='tab', aria-controls='tableCouple', aria-selected='false') 
                | Đôi
            li.nav-item
              a#tableCoupleGender-tab.nav-link(data-toggle='tab', href='#tableCoupleGender', role='tab', aria-controls='tableCoupleGender', aria-selected='false') 
                | Đôi nam nữ
                
        .box-member-tabs-content
          .tab-content
            #tableSingle.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='tableSingle-tab') 
              .table-responsive
                table.table.table-bordered.table-hover.display.history-table#historySingle( style='width: 100%')
                  thead
                    tr
                      th(scope='col') Dạng
                      th(scope='col') Tên Giải đấu
                      th(scope='col') Ngày bắt đầu
                      th(scope='col') Thứ hạng
                      th(scope='col') Tổng tỉ số
                      th(scope='col') Điểm
                      th(scope='col') Tiền thưởng
                      th(scope='col') Hành động


            #tableCouple.tab-pane.fade(role='tabpanel', aria-labelledby='tableCouple-tab') 
              .table-responsive
                table.table.table-bordered.table-hover.display.history-table#historyCouple(style='width: 100%')
                  thead
                    tr
                      th(scope='col') Dạng
                      th(scope='col') Tên Giải đấu
                      th(scope='col') Ngày bắt đầu
                      th(scope='col') Thứ hạng
                      th(scope='col') Tổng tỉ số
                      th(scope='col') Điểm
                      th(scope='col') Tiền thưởng
                      th(scope='col') Hành động

block script
  script(src='../js/data.js')
